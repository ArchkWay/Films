<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        app:cardCornerRadius="6dp"
        >
    <!--android:background="@drawable/back"-->

    <android.support.constraint.ConstraintLayout
        android:id="@+id/clItem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <!--android:background="@drawable/backitem"-->

        <TextView
            android:id="@+id/tvFilmDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="1994"
            />
        <!--android:background="@drawable/roundedcorners"-->

        <TextView
            android:id="@+id/tvFilmRuName"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textColor="#111"
            android:textSize="21sp"
            android:text="Побег из Шоушенка"
            app:layout_constraintTop_toBottomOf="@id/tvFilmDate"
            />
        <TextView
            android:id="@+id/tvFilmEngName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The Shawshank Redemption"
            app:layout_constraintTop_toBottomOf="@id/tvFilmRuName"
            />
        <TextView
            android:id="@+id/tvRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9.999"
            android:textColor="#4e8e39"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvFilmRuName"
            />

    </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

